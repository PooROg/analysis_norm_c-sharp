{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    }
  },
  "Application": {
    "Name": "Analysis Norm",
    "Version": "1.0.0",
    "MaxMemoryUsageMB": 200,
    "MaxProcessingTimeSeconds": 15,
    "EnablePerformanceLogging": true
  },
  "Performance": {
    "MaxConcurrentOperations": 4,
    "CacheExpirationMinutes": 30,
    "MemoryWarningThresholdMB": 150,
    "OperationTimeoutSeconds": 300
  },
  "Processing": {
    "SupportedEncodings": [ "cp1251", "utf-8", "utf-8-sig" ],
    "MaxFileSize": "100MB",
    "MaxConcurrentFiles": 10,
    "EnableParallelProcessing": true
  },
  "UI": {
    "Theme": "Light",
    "PrimaryColor": "Blue",
    "SecondaryColor": "Cyan",
    "EnableAnimations": true,
    "AutoSaveSettings": true
  },
  "Export": {
    "DefaultExcelFormat": "xlsx",
    "ExcelMaxRows": 1000000,
    "EnableFormattedExport": true,
    "DefaultImageFormat": "PNG"
  },
  "Logging": {
    "File": {
      "Path": "Logs/analyzer-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 52428800
    },
    "Console": {
      "Enabled": true,
      "LogLevel": "Information"
    }
  },
  "Diagnostics": {
    "EnableDiagnosticPanel": true,
    "PerformanceUpdateIntervalMs": 500,
    "MaxOperationHistoryItems": 500,
    "EnableMemoryProfiling": true,
    "EnableDetailedTimings": false
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "MaxCacheSize": "50MB",
    "CompactionPercentage": 0.25,
    "PriorityExpiration": {
      "High": 60,
      "Normal": 30,
      "Low": 15
    }
  },
  "Features": {
    "EnableAdvancedAnalysis": true,
    "EnableCoefficientsSupport": true,
    "EnableInteractiveCharts": true,
    "EnableBatchProcessing": true
  }
}