<!-- ЗАМЕНИТЬ ПОЛНОСТЬЮ MainWindow.xaml НА ЭТУ ВЕРСИЮ: -->

<Window x:Class="AnalysisNorm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Анализатор норм расхода электроэнергии РЖД v2.0 (CHAT 2)"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                CornerRadius="5"
                Padding="20,15"
                Margin="0,0,0,20">
            <TextBlock Text="Анализатор норм расхода электроэнергии РЖД" 
                       FontSize="20" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="🎉 CHAT 2 - Базовая версия запущена успешно!" 
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBlock Text="✅ Состояние системы:" 
                               FontSize="16" FontWeight="Medium"
                               Margin="0,0,0,15"/>

                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="✓ .NET 9:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Запущен" Foreground="#4CAF50" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="✓ WPF:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Работает" Foreground="#4CAF50" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="✓ XAML:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Загружен корректно" Foreground="#4CAF50" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="✓ Serilog:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Логирование активно" Foreground="#4CAF50" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="✓ Компиляция:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Без ошибок" Foreground="#4CAF50" VerticalAlignment="Center"/>
                    </Grid>

                    <Rectangle Height="2" Fill="#E0E0E0" Margin="0,30,0,20"/>

                    <TextBlock Text="📋 Этапы реализации CHAT 2:" 
                               FontSize="16" FontWeight="Medium"
                               Margin="0,0,0,15"/>

                    <StackPanel Margin="20,0">
                        <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="1. ✅ Создать базовую структуру проекта - ВЫПОЛНЕНО"/>
                        </Border>
                        <Border Background="#FFF8E1" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="2. ⏳ Добавить модели данных (Route, Section, Norm)"/>
                        </Border>
                        <Border Background="#FFF8E1" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="3. ⏳ Создать интерфейсы сервисов"/>
                        </Border>
                        <Border Background="#FFF8E1" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="4. ⏳ Реализовать HTML парсинг"/>
                        </Border>
                        <Border Background="#FFF8E1" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="5. ⏳ Добавить анализ норм"/>
                        </Border>
                        <Border Background="#FFF8E1" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,5">
                            <TextBlock Text="6. ⏳ Интегрировать UI с сервисами"/>
                        </Border>
                    </StackPanel>

                    <Rectangle Height="2" Fill="#E0E0E0" Margin="0,30,0,20"/>

                    <TextBlock Text="🔧 Информация о проекте:" 
                               FontSize="16" FontWeight="Medium"
                               Margin="0,0,0,15"/>

                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Версия:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="2.0.0 CHAT 2" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Платформа:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text=".NET 9 + WPF" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Архитектура:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Clean Architecture + MVVM" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Логи:" FontWeight="Medium" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="logs/analysis_norm_*.log" VerticalAlignment="Center" Foreground="#666"/>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Статус бар -->
        <Border Grid.Row="2" 
                Background="#EEEEEE"
                CornerRadius="3"
                Padding="15,8"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Статус: " FontWeight="Medium"/>
                    <TextBlock Text="Система готова к разработке" Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="Память: "/>
                    <TextBlock x:Name="MemoryText" Text="--MB" FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Время: "/>
                    <TextBlock x:Name="TimeText" Text="--:--" FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>