{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=analysis_norm.db"
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "AnalysisNorm": "Debug"
    }
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/analysis_norm-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  
  "Application": {
    "Name": "Анализатор норм расхода электроэнергии РЖД",
    "Version": "1.0.0",
    "DefaultWindowSize": {
      "Width": 1400,
      "Height": 900
    },
    "MinimumWindowSize": {
      "Width": 1000,
      "Height": 700
    }
  },
  
  "HtmlProcessing": {
    "DefaultEncoding": "windows-1251",
    "FallbackEncodings": [ "utf-8", "windows-1251", "koi8-r" ],
    "TimeoutSeconds": 30,
    "MaxFileSizeMB": 50
  },
  
  "DataAnalysis": {
    "CacheEnabled": true,
    "CacheTTLMinutes": 60,
    "MaxCachedItems": 1000,
    "InterpolationMethod": "CubicSpline",
    "StatisticalPrecision": 6
  },
  
  "Export": {
    "ExcelDefaultPath": "exports",
    "PlotDefaultPath": "plots",
    "ImageFormat": "PNG",
    "ImageDPI": 300
  },
  
  "Visualization": {
    "DefaultPlotWidth": 1200,
    "DefaultPlotHeight": 800,
    "ShowTooltips": true,
    "ShowHover": true,
    "ThemeMode": "Light"
  },
  
  "LocomotiveFilter": {
    "CoefficientsFilePath": "data/locomotive_coefficients.xlsx",
    "DefaultFilterEnabled": false,
    "AutoLoadCoefficients": true
  },
  
  "Performance": {
    "MaxRoutes": 100000,
    "MaxNorms": 10000,
    "ParallelProcessingEnabled": true,
    "MaxDegreeOfParallelism": -1
  }
}