{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=analysis_norm.db;Cache=Shared;Journal Mode=WAL;Synchronous=NORMAL;Foreign Keys=true;"
  },
  "ApplicationSettings": {
    "DataDirectory": "data",
    "TempDirectory": "temp", 
    "ExportsDirectory": "exports",
    "LogsDirectory": "logs",
    "SupportedEncodings": [
      "cp1251",
      "utf-8", 
      "utf-8-sig"
    ],
    "MaxTempFiles": 10,
    "DefaultTolerancePercent": 5.0,
    "MinWorkThreshold": 200.0,
    "DefaultWindowWidth": 1400,
    "DefaultWindowHeight": 900
  },
  "Logging": {
    "MinimumLevel": "Information",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableDetailedErrors": true,
    "RetainedFileCountLimit": 30,
    "Override": {
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    }
  },
  "Performance": {
    "EnableInterpolationCaching": true,
    "CacheExpirationDays": 30,
    "MaxConcurrentProcessing": 4,
    "DatabasePoolSize": 10,
    "EnableAsyncProcessing": true
  },
  "UI": {
    "Theme": "MaterialDesign",
    "PrimaryColor": "Blue", 
    "SecondaryColor": "Green",
    "EnableAnimations": true,
    "ChartRenderingEngine": "OxyPlot",
    "DefaultChartHeight": 800,
    "DefaultChartUpdateInterval": 100
  },
  "Export": {
    "DefaultExcelFormat": "xlsx",
    "IncludeFormatting": true,
    "HighlightDeviations": true,
    "IncludeStatistics": true,
    "AutoOpenAfterExport": false
  }
}