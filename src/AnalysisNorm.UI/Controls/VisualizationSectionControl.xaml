<UserControl x:Class="AnalysisNorm.UI.Controls.VisualizationSectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:Card Padding="16" 
                        Margin="8"
                        materialDesign:ElevationAssist.Elevation="Dp2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок секции -->
            <TextBlock Grid.Row="0"
                       Text="Визуализация и экспорт"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Margin="0,0,0,16"/>

            <!-- Настройки визуализации -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <TextBlock Text="Параметры графиков" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="0,0,0,8"/>
                
                <UniformGrid Columns="2">
                    <CheckBox x:Name="ShowTrendLineCheckBox"
                              Content="Показать линию тренда"
                              IsChecked="{Binding ShowTrendLine}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,4,8,4"/>
                              
                    <CheckBox x:Name="ShowConfidenceIntervalCheckBox"
                              Content="Доверительный интервал"
                              IsChecked="{Binding ShowConfidenceInterval}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="8,4,0,4"/>
                              
                    <CheckBox x:Name="ShowGridLinesCheckBox"
                              Content="Сетка координат"
                              IsChecked="{Binding ShowGridLines}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,4,8,4"/>
                              
                    <CheckBox x:Name="ShowLegendsCheckBox"
                              Content="Легенда графика"
                              IsChecked="{Binding ShowLegends}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="8,4,0,4"/>
                </UniformGrid>
            </StackPanel>

            <!-- Кнопки создания визуализаций -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,16">
                <TextBlock Text="Типы визуализации" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="0,0,0,8"/>
                
                <UniformGrid Columns="2" Rows="2">
                    <!-- График расхода электроэнергии -->
                    <Button x:Name="CreateConsumptionChartButton"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            Command="{Binding CreateConsumptionChartCommand}"
                            Margin="0,0,4,4"
                            Padding="12,8">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartLine" 
                                                       Width="18" 
                                                       Height="18" 
                                                       Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="График расхода" FontWeight="SemiBold"/>
                                    <TextBlock Text="Нормы vs факт" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Диаграмма отклонений -->
                    <Button x:Name="CreateDeviationChartButton"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            Command="{Binding CreateDeviationChartCommand}"
                            Margin="4,0,0,4"
                            Padding="12,8">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" 
                                                       Width="18" 
                                                       Height="18" 
                                                       Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Отклонения" FontWeight="SemiBold"/>
                                    <TextBlock Text="По участкам" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Статистика по сериям -->
                    <Button x:Name="CreateSeriesStatsButton"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Command="{Binding CreateSeriesStatsCommand}"
                            Margin="0,4,4,0"
                            Padding="12,8">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartPie" 
                                                       Width="18" 
                                                       Height="18" 
                                                       Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="По сериям" FontWeight="SemiBold"/>
                                    <TextBlock Text="Статистика" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Тепловая карта -->
                    <Button x:Name="CreateHeatmapButton"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Command="{Binding CreateHeatmapCommand}"
                            Margin="4,4,0,0"
                            Padding="12,8">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GridLarge" 
                                                       Width="18" 
                                                       Height="18" 
                                                       Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Тепловая карта" FontWeight="SemiBold"/>
                                    <TextBlock Text="Эффективность" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </UniformGrid>
            </StackPanel>

            <!-- Предварительный просмотр графика -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,16"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                
                <Grid>
                    <!-- Placeholder когда нет данных -->
                    <StackPanel x:Name="NoDataPlaceholder"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding HasChartData, Converter={StaticResource InvertBooleanToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="ChartLineVariant" 
                                               Width="64" 
                                               Height="64" 
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="0,0,0,8"/>
                        <TextBlock Text="Выберите данные для создания графика" 
                                  Style="{StaticResource MaterialDesignBody2TextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Предварительный просмотр -->
                    <Image x:Name="ChartPreviewImage"
                           Source="{Binding ChartPreviewSource}"
                           Stretch="Uniform"
                           Visibility="{Binding HasChartData, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="8"/>
                </Grid>
            </Border>

            <!-- Кнопки экспорта -->
            <UniformGrid Grid.Row="4" Columns="4">
                <Button x:Name="ExportExcelButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ExportToExcelCommand}"
                        IsEnabled="{Binding HasAnalysisData}"
                        Margin="0,0,4,0"
                        Padding="8,6">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" 
                                                   Width="16" 
                                                   Height="16" 
                                                   Margin="0,0,4,0"/>
                            <TextBlock Text="Excel" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="ExportPdfButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ExportToPdfCommand}"
                        IsEnabled="{Binding HasAnalysisData}"
                        Margin="4,0"
                        Padding="8,6">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" 
                                                   Width="16" 
                                                   Height="16" 
                                                   Margin="0,0,4,0"/>
                            <TextBlock Text="PDF" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="ExportImageButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ExportToImageCommand}"
                        IsEnabled="{Binding HasChartData}"
                        Margin="4,0"
                        Padding="8,6">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileImageOutline" 
                                                   Width="16" 
                                                   Height="16" 
                                                   Margin="0,0,4,0"/>
                            <TextBlock Text="PNG" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="PrintButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding PrintCommand}"
                        IsEnabled="{Binding HasAnalysisData}"
                        Margin="4,0,0,0"
                        Padding="8,6">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" 
                                                   Width="16" 
                                                   Height="16" 
                                                   Margin="0,0,4,0"/>
                            <TextBlock Text="Печать" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </UniformGrid>
        </Grid>
    </materialDesign:Card>

</UserControl>