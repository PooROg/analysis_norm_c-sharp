<Window x:Class="AnalysisNorm.UI.Windows.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1200" MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Стили для toolbar кнопок -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignToolButton}">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="36"/>
        </Style>
        
        <!-- Стили для toolbar текста -->
        <Style x:Key="ToolbarTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar с настройками графика - аналог Python plot controls -->
            <RowDefinition Height="Auto"/>
            <!-- Основная область графиков - аналог Python dual subplots -->
            <RowDefinition Height="*"/>
            <!-- Статус-бар с информацией о данных -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar управления графиком -->
        <materialDesign:Card Grid.Row="0" 
                             Padding="8" 
                             Margin="8,8,8,4"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                
                <!-- Информация о графике -->
                <TextBlock Text="{Binding PlotTitle}" 
                           Style="{StaticResource ToolbarTextStyle}"
                           FontSize="14"/>

                <Separator Style="{StaticResource MaterialDesignSeparator}"
                          Margin="12,0"/>

                <!-- Режимы отображения - аналог Python norm types -->
                <TextBlock Text="Режим:" Style="{StaticResource ToolbarTextStyle}"/>
                
                <ComboBox x:Name="DisplayModeComboBox"
                          ItemsSource="{Binding DisplayModes}"
                          SelectedItem="{Binding SelectedDisplayMode}"
                          materialDesign:ComboBoxAssist.MaxLength="20"
                          Width="160"
                          Margin="4,0,12,0"/>

                <!-- Настройки графика -->
                <CheckBox Content="Показывать точки"
                          IsChecked="{Binding ShowDataPoints}"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Margin="8,0"/>

                <CheckBox Content="Показывать легенду"
                          IsChecked="{Binding ShowLegend}"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Margin="8,0"/>

                <!-- Spacer -->
                <Grid Width="*"/>

                <!-- Кнопки управления -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ResetZoomCommand}"
                        ToolTip="Сбросить масштаб">
                    <materialDesign:PackIcon Kind="FitToPage" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ExportImageCommand}"
                        ToolTip="Экспорт в изображение">
                    <materialDesign:PackIcon Kind="Download" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ShowDataTableCommand}"
                        ToolTip="Показать таблицу данных">
                    <materialDesign:PackIcon Kind="Table" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Click="CloseWindow_Click"
                        ToolTip="Закрыть график">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </materialDesign:Card>

        <!-- Основная область графиков - dual subplot как в Python Plotly -->
        <Grid Grid.Row="1" Margin="8,4,8,4">
            <Grid.RowDefinitions>
                <!-- Верхний график: нормы расхода - аналог Python subplot 1 -->
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4"/>
                <!-- Нижний график: отклонения - аналог Python subplot 2 -->
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- График норм расхода (главный) -->
            <materialDesign:Card Grid.Row="0" 
                                 materialDesign:ElevationAssist.Elevation="Dp1"
                                 Padding="4">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="{Binding NormsPlotTitle}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Margin="8,8,8,4"
                               HorizontalAlignment="Center"/>
                    
                    <!-- OxyPlot для норм - аналог Python основного subplot -->
                    <oxy:PlotView x:Name="NormsPlotView"
                                  Model="{Binding NormsPlotModel}"
                                  Background="White"
                                  Margin="4"/>
                </DockPanel>
            </materialDesign:Card>

            <!-- Разделитель между графиками -->
            <Border Grid.Row="1" 
                    Height="2" 
                    Background="{DynamicResource MaterialDesignDivider}"
                    Margin="16,0"/>

            <!-- График отклонений -->
            <materialDesign:Card Grid.Row="2" 
                                 materialDesign:ElevationAssist.Elevation="Dp1"
                                 Padding="4">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="{Binding DeviationsPlotTitle}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Margin="8,8,8,4"
                               HorizontalAlignment="Center"/>
                    
                    <!-- OxyPlot для отклонений - аналог Python второго subplot -->
                    <oxy:PlotView x:Name="DeviationsPlotView"
                                  Model="{Binding DeviationsPlotModel}"
                                  Background="White"
                                  Margin="4"/>
                </DockPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Статус-бар с информацией о данных -->
        <materialDesign:Card Grid.Row="2" 
                             Padding="8" 
                             Margin="8,4,8,8"
                             materialDesign:ElevationAssist.Elevation="Dp1">
            <DockPanel>
                <!-- Информация о данных -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="Information" 
                                            Width="16" Height="16"
                                            VerticalAlignment="Center"
                                            Margin="0,0,6,0"/>
                    
                    <TextBlock Text="{Binding DataInfo}" 
                               VerticalAlignment="Center"
                               FontSize="12"/>
                </StackPanel>

                <!-- Информация о выбранной точке -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <TextBlock Text="{Binding SelectedPointInfo}" 
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- Overlay для загрузки данных графика -->
        <Grid Grid.RowSpan="3" 
              Background="#AA000000" 
              Visibility="{Binding IsLoadingPlot, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Background="{DynamicResource MaterialDesignPaper}"
                        Width="250" Height="120">
                <materialDesign:PackIcon Kind="ChartLineVariant" 
                                        Width="40" Height="40"
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        HorizontalAlignment="Center" 
                                        Margin="0,16,0,12"/>
                
                <TextBlock Text="{Binding PlotLoadingMessage}" 
                          HorizontalAlignment="Center"
                          FontSize="13" 
                          FontWeight="Medium"
                          Margin="0,0,0,12"/>
                          
                <ProgressBar Value="{Binding PlotLoadingProgress}" 
                           Maximum="100"
                           Margin="16,0,16,16" 
                           Height="4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>