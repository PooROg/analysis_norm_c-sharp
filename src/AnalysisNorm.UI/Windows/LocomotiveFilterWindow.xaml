<Window x:Class="AnalysisNorm.UI.Windows.LocomotiveFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Выбор локомотивов и коэффициентов" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и настройки -->
        <materialDesign:Card Grid.Row="0" 
                             Padding="16" 
                             Margin="0,0,0,12"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel>
                <TextBlock Text="Фильтр локомотивов по сериям" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <!-- Настройки применения коэффициентов - аналог Python use_coefficients -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox x:Name="UseCoefficientsCheckBox"
                              Content="Применять коэффициенты при анализе"
                              IsChecked="{Binding UseCoefficients}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              VerticalAlignment="Center"/>
                    
                    <materialDesign:PackIcon Kind="Information" 
                                            Width="16" Height="16"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="Коэффициенты корректируют расход с учетом особенностей локомотивов"/>
                </StackPanel>

                <CheckBox Content="Исключить локомотивы с низкой работой (< 200 кВт⋅час)"
                          IsChecked="{Binding ExcludeLowWork}"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Margin="0,0,0,8"/>

                <!-- Загрузка коэффициентов - аналог Python coefficients file loading -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Файл коэффициентов:" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>

                    <TextBlock Grid.Column="1"
                               x:Name="CoefficientsFileLabel"
                               Text="Не загружен"
                               VerticalAlignment="Center"
                               Margin="8,0"
                               Foreground="Gray"/>

                    <Button Grid.Column="2"
                            Content="Загрузить"
                            Click="LoadCoefficientsFile_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="4,0"/>

                    <Button Grid.Column="3"
                            Content="Очистить"
                            Click="ClearCoefficients_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="4,0"/>
                </Grid>

                <!-- Статус коэффициентов -->
                <TextBlock x:Name="CoefficientsStatusLabel"
                           Text=""
                           FontSize="11"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Основная область с TabControl для серий локомотивов -->
        <materialDesign:Card Grid.Row="1" 
                             materialDesign:ElevationAssist.Elevation="Dp1"
                             Margin="0,0,0,12">
            <DockPanel>
                <!-- Информация о выборе -->
                <StackPanel DockPanel.Dock="Top" 
                            Orientation="Horizontal" 
                            Margin="16,16,16,8">
                    <TextBlock x:Name="SelectionLabel"
                               Text="Выбрано: 0 из 0"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                    
                    <Button Content="Выбрать все"
                            Click="SelectAll_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="16,0,4,0"
                            FontSize="11"/>
                    
                    <Button Content="Снять все"
                            Click="DeselectAll_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="4,0"
                            FontSize="11"/>
                </StackPanel>

                <!-- TabControl с сериями локомотивов - аналог Python TreeView tabs -->
                <TabControl x:Name="SeriesTabControl"
                            Style="{StaticResource MaterialDesignTabControl}"
                            Margin="8,0,8,8">
                </TabControl>
            </DockPanel>
        </materialDesign:Card>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,8">
            
            <Button Content="Применить фильтр"
                    Click="ApplyFilter_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Padding="20,8"
                    Margin="0,0,8,0"/>

            <Button Content="Отмена"
                    Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Padding="20,8"/>
        </StackPanel>

        <!-- Статус-бар -->
        <Border Grid.Row="3" 
                Background="{DynamicResource MaterialDesignDivider}"
                Height="1"
                Margin="0,8,0,0"/>
    </Grid>
</Window>