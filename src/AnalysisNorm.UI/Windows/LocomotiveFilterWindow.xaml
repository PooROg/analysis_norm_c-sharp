<Window x:Class="AnalysisNorm.UI.Windows.LocomotiveFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Выбор локомотивов и коэффициентов" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и настройки -->
        <materialDesign:Card Grid.Row="0" 
                           Padding="16" 
                           Margin="0,0,0,12"
                           materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel>
                <TextBlock Text="Фильтр локомотивов по сериям" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="0,0,0,12"/>

                <!-- Настройки применения коэффициентов -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox x:Name="UseCoefficientsCheckBox"
                              Content="Применять коэффициенты локомотивов"
                              IsChecked="{Binding UseCoefficients}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,0,16,0"/>
                              
                    <Button x:Name="LoadCoefficientsButton"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding LoadCoefficientsCommand}"
                            Content="Загрузить коэффициенты"
                            Padding="12,6">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcelOutline" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Margin="0,0,6,0"/>
                                <TextBlock Text="Загрузить коэффициенты" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- Статус коэффициентов -->
                <TextBlock x:Name="CoefficientsStatusTextBlock"
                          Text="{Binding CoefficientsStatus}"
                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Основное содержимое - список локомотивов по сериям -->
        <materialDesign:Card Grid.Row="1" 
                           materialDesign:ElevationAssist.Elevation="Dp1"
                           Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar фильтрации -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource MaterialDesignToolBarBackground}"
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="SeriesFilterTextBox"
                                 materialDesign:HintAssist.Hint="Поиск по серии..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding SeriesFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 Margin="0,0,12,0"/>
                                 
                        <Button x:Name="SelectAllButton"
                                Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding SelectAllCommand}"
                                ToolTip="Выбрать все"
                                Margin="0,0,4,0">
                            <materialDesign:PackIcon Kind="CheckboxMultipleMarked" Width="20" Height="20"/>
                        </Button>
                        
                        <Button x:Name="UnselectAllButton"
                                Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding UnselectAllCommand}"
                                ToolTip="Снять выделение"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="CheckboxMultipleBlankOutline" Width="20" Height="20"/>
                        </Button>

                        <Separator Style="{StaticResource MaterialDesignVerticalSeparator}" Margin="8,0"/>

                        <TextBlock Text="{Binding SelectionSummary}" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  VerticalAlignment="Center"
                                  Margin="8,0"/>
                    </StackPanel>
                </Border>

                <!-- TreeView с локомотивами по сериям -->
                <TreeView Grid.Row="1"
                          x:Name="LocomotiveTreeView"
                          ItemsSource="{Binding LocomotivesBySeries}"
                          Style="{StaticResource MaterialDesignTreeView}"
                          Margin="8">
                    
                    <!-- Узлы серий (верхний уровень) -->
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Locomotives}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected}"
                                         Command="{Binding DataContext.SeriesSelectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                         CommandParameter="{Binding SeriesName}"
                                         Style="{StaticResource MaterialDesignCheckBox}"
                                         Margin="0,0,8,0"/>
                                         
                                <materialDesign:PackIcon Kind="Train" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Margin="0,0,6,0"/>
                                                       
                                <TextBlock Text="{Binding SeriesName}" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                          
                                <TextBlock Text="{Binding Count, StringFormat='({0} лок.)'}" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          VerticalAlignment="Center"
                                          Opacity="0.7"/>
                                          
                                <TextBlock Text="{Binding AvgCoefficient, StringFormat='К ср.={0:F3}'}" 
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          VerticalAlignment="Center"
                                          Margin="12,0,0,0"
                                          Visibility="{Binding DataContext.UseCoefficients, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <!-- Узлы локомотивов (дочерний уровень) -->
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="20,2">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                 Command="{Binding DataContext.LocomotiveSelectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                 CommandParameter="{Binding}"
                                                 Style="{StaticResource MaterialDesignCheckBox}"
                                                 Margin="0,0,8,0"/>
                                                 
                                        <TextBlock Text="{Binding Number}" 
                                                  VerticalAlignment="Center"
                                                  MinWidth="60"/>
                                                  
                                        <TextBlock Text="{Binding Depot}" 
                                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0"
                                                  MinWidth="80"/>
                                                  
                                        <Border Background="{Binding CoefficientStatusColor}"
                                                CornerRadius="2"
                                                Padding="4,2"
                                                Margin="8,0,0,0"
                                                Visibility="{Binding DataContext.UseCoefficients, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="{Binding CoefficientFormatted}" 
                                                      Foreground="White"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </materialDesign:Card>

        <!-- Информация о выборе -->
        <materialDesign:Card Grid.Row="2" 
                           Padding="12" 
                           Margin="0,0,0,12"
                           materialDesign:ElevationAssist.Elevation="Dp1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="SpaceBetween">
                <TextBlock Text="{Binding DetailedSelectionInfo}" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          VerticalAlignment="Center"/>
                          
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CoefficientsSummary}" 
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button x:Name="CancelButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,8,0"
                    Padding="16,8"
                    MinWidth="100"/>
                    
            <Button x:Name="ApplySelectionButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Применить выбор"
                    Command="{Binding ApplySelectionCommand}"
                    IsEnabled="{Binding CanApplySelection}"
                    Padding="16,8"
                    MinWidth="120">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check" 
                                               Width="16" 
                                               Height="16" 
                                               Margin="0,0,6,0"/>
                        <TextBlock Text="Применить выбор" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>

</Window>