<Window x:Class="AnalysisNorm.UI.Windows.LocomotiveFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Выбор локомотивов и коэффициентов" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и настройки -->
        <materialDesign:Card Grid.Row="0" 
                             Padding="16" 
                             Margin="0,0,0,12"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel>
                <TextBlock Text="Фильтр локомотивов по сериям" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <!-- Настройки применения коэффициентов - аналог Python use_coefficients -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox x:Name="UseCoefficientsCheckBox"
                              Content="Применять коэффициенты при анализе"
                              IsChecked="{Binding UseCoefficients}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,0,16,0"/>
                    
                    <CheckBox x:Name="ExcludeLowWorkCheckBox"
                              Content="Исключать локомотивы с низкой работой"
                              IsChecked="{Binding ExcludeLowWork}"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                </StackPanel>

                <!-- Файл коэффициентов - аналог Python coefficients_file -->
                <TextBlock Text="Файл коэффициентов:" 
                           FontWeight="Medium" 
                           Margin="0,8,0,4"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="CoefficientsFileLabel"
                               Grid.Column="0"
                               Text="Файл не выбран"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"/>

                    <Button Grid.Column="1"
                            Content="Загрузить"
                            Click="LoadCoefficientsFile_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="4,0"/>

                    <Button Grid.Column="2"
                            Content="Очистить"
                            Click="ClearCoefficients_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="12,4"
                            Margin="4,0"/>
                </Grid>

                <!-- Статус коэффициентов -->
                <TextBlock x:Name="CoefficientsStatusLabel"
                           Text=""
                           FontSize="11"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Основная область с TabControl для серий локомотивов -->
        <materialDesign:Card Grid.Row="1" 
                             materialDesign:ElevationAssist.Elevation="Dp1"
                             Margin="0,0,0,12">
            <DockPanel>
                <!-- Информация о выборе -->
                <StackPanel DockPanel.Dock="Top" 
                            Orientation="Horizontal" 
                            Margin="16,16,16,8">
                    <TextBlock x:Name="SelectionLabel"
                               Text="Выбрано: 0 из 0"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                    
                    <Button Content="Выбрать все"
                            Click="SelectAll_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="12,0,0,0"/>
                    
                    <Button Content="Снять все"
                            Click="UnselectAll_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="4,0,0,0"/>
                </StackPanel>

                <!-- TabControl для серий локомотивов -->
                <TabControl x:Name="SeriesTabControl"
                            Style="{StaticResource MaterialDesignTabControl}"
                            Margin="8">
                    <!-- Вкладки будут создаваться динамически в коде -->
                </TabControl>
            </DockPanel>
        </materialDesign:Card>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="ОК" 
                    Click="OK_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsDefault="True"
                    Margin="0,0,8,0"
                    Padding="16,8"/>
            
            <Button Content="Отмена" 
                    Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    IsCancel="True"
                    Padding="16,8"/>
        </StackPanel>
    </Grid>
</Window>