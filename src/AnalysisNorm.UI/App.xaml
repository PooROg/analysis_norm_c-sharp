<Application x:Class="AnalysisNorm.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <!-- MaterialDesign Theme Resources -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Colors -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="DeepOrange" />
                
                <!-- Material Design Controls -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                
                <!-- Additional Material Design Components -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Application Styles -->
            <Style x:Key="AppTitleStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            </Style>
            
            <!-- Converters для UI binding -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <!-- Custom converters для анализатора норм -->
            <local:InvertBooleanConverter x:Key="InvertBooleanConverter" xmlns:local="clr-namespace:AnalysisNorm.UI.Converters"/>
            <local:NumberFormattingConverter x:Key="NumberFormattingConverter" xmlns:local="clr-namespace:AnalysisNorm.UI.Converters"/>
            <local:DeviationPercentageConverter x:Key="DeviationPercentageConverter" xmlns:local="clr-namespace:AnalysisNorm.UI.Converters"/>
            
            <!-- Стили для статусных сообщений - аналог Python style_config -->
            <Style x:Key="SuccessTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Green"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            
            <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Red"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            
            <Style x:Key="WarningTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Orange"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            
            <Style x:Key="InfoTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="RoyalBlue"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>